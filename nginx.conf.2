# nginx.conf

worker_processes  1;

events {
    worker_connections  1024;
}

http {
    lua_package_path "/usr/local/openresty/lualib/?.lua;;";

    server {
        listen 80;

        location /upload {
            client_max_body_size 100M; # 设置最大上传文件大小
            content_by_lua_file /path/to/upload.lua;
        }
    }
}
